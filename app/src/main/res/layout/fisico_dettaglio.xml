<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"

                >

                <EditText
                    android:id="@+id/posaFisico"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:background="@drawable/drawable_botton_grigio"
                    android:textAlignment="center"
                    android:hint="Nome Posa"
                    android:layout_height="wrap_content"
                    >
                </EditText>
                <ImageButton
                    android:id="@+id/immaginefisico"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_botton_white"
                    android:src="@drawable/noimg"
                    >
                </ImageButton>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"

                >

                <EditText
                    android:id="@+id/posaFisico2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:background="@drawable/drawable_botton_grigio"
                    android:textAlignment="center"
                    android:hint="Nome Posa"
                    android:layout_height="wrap_content"
                    >
                </EditText>
                <ImageButton
                    android:id="@+id/immaginefisico2"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_botton_white"
                    android:src="@drawable/noimg"
                    >
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"

                >

                <EditText
                    android:id="@+id/posaFisico3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:background="@drawable/drawable_botton_grigio"
                    android:textAlignment="center"
                    android:hint="Nome Posa"
                    android:layout_height="wrap_content"
                    >
                </EditText>
                <ImageButton
                    android:id="@+id/immaginefisico3"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_botton_white"
                    android:src="@drawable/noimg"
                    >
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"

                >

                <EditText
                    android:id="@+id/posaFisico4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:background="@drawable/drawable_botton_grigio"
                    android:textAlignment="center"
                    android:hint="Nome Posa"
                    android:layout_height="wrap_content"
                    >
                </EditText>
                <ImageButton
                    android:id="@+id/immaginefisico4"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_botton_white"
                    android:src="@drawable/noimg"
                    >
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"

                >

                <EditText
                    android:id="@+id/posaFisico5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:background="@drawable/drawable_botton_grigio"
                    android:textAlignment="center"
                    android:hint="Nome Posa"
                    android:layout_height="wrap_content"
                    >
                </EditText>
                <ImageButton
                    android:id="@+id/immaginefisico5"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_botton_white"
                    android:src="@drawable/noimg"
                    >
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"

                >

                <EditText
                    android:id="@+id/posaFisico6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:background="@drawable/drawable_botton_grigio"
                    android:textAlignment="center"
                    android:hint="Nome Posa"
                    android:layout_height="wrap_content"
                    >
                </EditText>
                <ImageButton
                    android:id="@+id/immaginefisico6"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_botton_white"
                    android:src="@drawable/noimg"
                    >
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"

                >

                <EditText
                    android:id="@+id/posaFisico7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:background="@drawable/drawable_botton_grigio"
                    android:textAlignment="center"
                    android:hint="Nome Posa"
                    android:layout_height="wrap_content"
                    >
                </EditText>
                <ImageButton
                    android:id="@+id/immaginefisico7"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_botton_white"
                    android:src="@drawable/noimg"
                    >
                </ImageButton>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.175"
                    android:gravity="left"
                    android:text=""></TextView>
                <EditText
                    android:id="@+id/noteFisico"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:padding="6dp"
                    android:hint="Note"
                    android:background="@drawable/drawable_botton_grigio"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    >
                </EditText>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.175"
                    android:gravity="left"
                    android:text=""></TextView>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleziona una data:"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                >
            </TextView>
            <CalendarView
                android:id="@+id/calendarioFisico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                ></CalendarView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="15dp"
            android:background="@drawable/drawable_scheda"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            >

        </Button>
        <Button
            android:id="@+id/salvaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salva"
            android:textSize="15dp"
            android:background="@drawable/drawable_scheda"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            >
        </Button>


    </LinearLayout>


</RelativeLayout>