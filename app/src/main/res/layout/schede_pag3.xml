<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gliglio_sculo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/edit"
            android:background="@drawable/drawable_botton_white"
            android:onClick="EditUtente"
            >
        </ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/adesivo">

        </ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:layout_marginTop="5dp"
            android:onClick="SeeUtente"
            android:layout_gravity="center_vertical"
            android:background="@drawable/drawable_botton_white"
            android:src="@drawable/ic_baseline_info_24"
            >
        </ImageView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Buon allenamento!"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25dp"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/nomeUtente"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="25dp"></TextView>

        </LinearLayout>


    <ListView
        android:id="@+id/listaSchedeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:padding="4dp"
        >
    </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></TextView>

    <Button
        android:id="@+id/creaScheda"
        android:onClick="CreaScheda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_weight="0.5"
        android:background="@drawable/drawable_scheda"
        android:text="Nuova Scheda"
        android:textColor="@color/black"
        android:textSize="20dp">
    </Button>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></TextView>

    </LinearLayout>
</RelativeLayout>