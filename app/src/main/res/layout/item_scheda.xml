<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"

    android:padding="20dp">


    <ImageView
        android:id="@+id/immagineScheda"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/noimg"
        >

    </ImageView>
    <Button
        android:id="@+id/visualizzaScheda"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Scheda1"
        android:textColor="@color/white"
        android:background="@drawable/drawable_scheda"
        android:onClick="OnSchedaClick"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        >
    </Button>
    <Button
        android:id="@+id/eliminaScheda"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:background="@drawable/ic_baseline_close_24"
        android:onClick="OnDeleteSchedaClick"
        android:layout_weight="0.2"
        android:layout_marginRight="10dp"
        >
    </Button>


</LinearLayout>