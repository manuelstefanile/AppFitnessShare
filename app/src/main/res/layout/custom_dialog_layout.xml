<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grigio"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center"
        android:text="Sei sicuro di voler eliminare?"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <!-- Aggiungi altri elementi come testo, pulsanti, ecc. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>

        <Button
            android:id="@+id/button_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:background="@drawable/drawable_botton_grigio"
            android:text="Si" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>

        <Button
            android:id="@+id/button_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_botton_grigio"
            android:text="No" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>

    </LinearLayout>
</LinearLayout>