<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/titoloPaginaReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRAZIONE"
            android:layout_gravity="center_horizontal"
            android:textSize="100px"
            android:layout_marginBottom="20px"
            >

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20px"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nome:"
                android:layout_marginRight="20px"
                >
            </TextView>
            <EditText
                android:id="@+id/nomeRegistrazione"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cognome:"
                android:layout_marginRight="20px"
                >
            </TextView>
            <EditText
                android:id="@+id/cognomeRegistrazione"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="EtÃ :"
                android:layout_marginRight="20px"
                >
            </TextView>
            <EditText
                android:id="@+id/etaRegistrazione"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nome utente:"

                >
            </TextView>
            <EditText
                android:id="@+id/nomeUtenteRegistrazione"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Altezza:"

                >
            </TextView>
            <EditText
                android:id="@+id/altezzaRegistrazione"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                >
            </EditText>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cm"
                android:layout_weight="0.2"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Peso:"
                >
            </TextView>
            <Button
                android:id="@+id/buttonPeso"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tag="peso"
                android:onClick="FunzioniInserisciRegistrazioni"
                android:text="Inserisci"
                >

            </Button>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Misure:"

                >
            </TextView>
            <Button
                android:id="@+id/buttonMisure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Inserisci"
                android:tag="misure"
                android:onClick="FunzioniInserisciRegistrazioni"
                >

            </Button>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kcal attuali:"
                android:layout_weight="1"
                >
            </TextView>
            <Button
                android:id="@+id/buttonKcal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Inserisci"
                android:tag="kcal"
                android:onClick="FunzioniInserisciRegistrazioni"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Note:"
                android:layout_weight="1"
                >
            </TextView>
            <Button
                android:id="@+id/buttonNote"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Inserisci"
                android:tag="note"
                android:onClick="FunzioniInserisciRegistrazioni"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <Button
                    android:id="@+id/salvaButtonReg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Salva"
                    android:background="@color/azzurrino"
                    android:layout_marginRight="10dp"

                    >

                </Button>
                <Button
                    android:id="@+id/ripristinaDatiButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ripristina"
                    android:background="@color/azzurrino"
                    >
                </Button>
            </LinearLayout>
            <Button
                android:id="@+id/bottoneNextRegistrazione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:background="@color/grigio"
                android:textColor="@color/black"
                android:layout_gravity="center"
                >
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>