<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
   >

    <Button
        android:id="@+id/deleteEsercizi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="0.1"
        android:background="@drawable/ic_baseline_close_24"
        android:onClick="OnDeleteExPerGiornoClick"></Button>
    <Button
        android:id="@+id/visualizzaEsercizi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Esercizio"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:layout_weight="0.5"
        android:background="@drawable/drawable_scheda"
        >
    </Button>
    <ImageView
        android:id="@+id/immagineEsercizi"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.1"
        android:layout_marginLeft="20dp"
        android:src="@drawable/noimg"
        android:onClick="OnImmagineClick"
        >

    </ImageView>




</LinearLayout>